@model List<Online_Shop.Models.CartViewModel>

@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="section group">
        <table class="table">
            <thead>
                <tr>
                    <td>Mã SP</td>
                    <td>Tên SP</td>
                    <td>Ảnh SP</td>
                    <td>Số lượng</td>
                    <td>Đơn giá</td>
                    <td>Thành tiền</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.ProductName</td>
                        <td><img src="@item.ProductImage" width="100" alt="@item.ProductName" /></td>
                        <td><input type="text" class="input_quantity" data-id="@item.ID" value="@item.Quantity" /></td>
                        <td>@item.ProductPrice</td>
                        <td>@(item.ProductPrice * item.Quantity)</td>
                        <td><a data-id="@item.ID" class="btn_del" href="#">X</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="section group">
        @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
        {
            <div class="form-group">
                <label>aaa</label>
                <input name="Status" />

            </div>
            <button type="submit" class="btn">Gửi đơn hàng</button>
        }
    </div>
</div>

