@model List<Online_Shop.Models.CartItemSession>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section js {
    <script src="/Assets/Client/js/controllers/cart.js"></script>
}

<div class="content">
    <div class="section group">
        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã SP</td>
                        <td>Tên SP</td>
                        <td>Ảnh SP</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Image" width="100" alt="@item.Product.Name" /></td>
                            <td><input type="text" class="input_quantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                            <td>@item.Product.Price</td>
                            <td>@(item.Product.Price * item.Quantity)</td>
                            <td><a data-id="@item.Product.ID" class="btn_del" href="#">X</a></td>
                        </tr>
                    }
                </tbody>
            </table>

            <button id="btn_Continue">Tiếp tục mua hàng</button>
            <button id="btn_Update">Cập nhật giỏ hàng</button>
            <button id="btn_Delete">Xóa giỏ hàng</button>
            <button id="btn_Pay">Thanh toán</button>

        }
        else
        {
            <span>Chưa có sản phẩm nào trong giỏ hàng</span>
        }
    </div>
</div>



