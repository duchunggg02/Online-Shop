<!DOCTYPE HTML>
<html>
<head>
    <title>E-Commerce Website</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">*@

    <link href="/Assets/Client/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/Assets/Client/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.14.0/themes/base/jquery-ui.css">

    @*<script type="text/javascript" src="/Assets/Client/js/jquery-1.7.2.min.js"></script>*@
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>*@
    <script src="https://code.jquery.com/ui/1.14.0/jquery-ui.js"></script>
    <script type="text/javascript" src="/Assets/Client/js/move-top.js"></script>
    <script type="text/javascript" src="/Assets/Client/js/easing.js"></script>
    <script type="text/javascript" src="/Assets/Client/js/startstop-slider.js"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                @{ Html.RenderAction("TopMenu", "Home");}
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")" rel="nofollow"><img src="/Assets/Client/images/logo.png" alt="logo" /></a>
                </div>
                @{ Html.RenderAction("CartHeader", "Home");}
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                @{Html.RenderAction("MainMenu", "Home");}
                <div class="search_box">
                    <form action="/Product/Search" method="get">
                        <input type="text" name="keyword" id="searchTxt" placeholder="Bạn tìm gì...">
                        <input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            @RenderSection("slide", false)
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        @{ Html.RenderAction("Footer", "Home");}
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
    <script src="/Assets/Client/js/controllers/baseController.js"></script>
    @RenderSection("js", false);
</body>
</html>