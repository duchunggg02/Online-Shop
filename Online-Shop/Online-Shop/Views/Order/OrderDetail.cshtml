@model List<Model.EF.OrderDetail>


@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h5>CHI TIẾT ĐƠN HÀNG @Model.First().OrderID</h5>

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>

            </tr>
        }
    </tbody>
</table>

